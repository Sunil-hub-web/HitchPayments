<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HitchPayments" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/red</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="button">

        <item name="android:background">@drawable/buttonback_bg</item>
        <item name="backgroundTint">@color/blue</item>

    </style>

    <style name="MyTextInputLayout_overlay">
        <item name="colorOnSurface">@color/red</item>
    </style>

    <style name="EditTextHintWhite" parent="@style/Theme.HitchPayments">
        <item name="colorControlNormal">@color/red</item>
        <item name="colorControlActivated">@color/red</item>
    </style>

    <style name="TextInputLayoutAppearanceDifferent" parent="@style/ThemeOverlay.MaterialComponents">
        <item name="colorOnSurface">@color/red</item>
        <item name="colorPrimary">@color/red</item>
    </style>

</resources>