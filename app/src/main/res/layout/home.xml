<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tollbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginRight="@dimen/ten">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hundred_eighty"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/five"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/deshbord_bg">

                        <ImageView
                            android:id="@+id/imageview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/five"
                            android:layout_marginRight="@dimen/five"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/npci_logo"
                            android:scaleType="centerInside"
                            android:layout_above="@+id/text"/>

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/textviewback_bg"
                            android:gravity="center"
                            android:padding="@dimen/eight"
                            android:text="NPCI TAG"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textsize"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_NPCITAG"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"></Button>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/deshbord_bg">

                        <ImageView
                            android:id="@+id/imageview2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_above="@+id/text1"
                            android:src="@drawable/fastag_logo"
                            android:scaleType="centerInside"
                            android:layout_margin="@dimen/five"/>

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tag Activation"
                            android:textAllCaps="true"
                            android:layout_alignParentBottom="true"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:padding="@dimen/eight"
                            android:textSize="@dimen/textsize"
                            android:background="@drawable/textviewback_bg"/>

                        <Button
                            android:id="@+id/btn_TagActivation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"></Button>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hundred_eighty"
                android:layout_marginTop="@dimen/ten"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/five"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/deshbord_bg">

                        <ImageView
                            android:id="@+id/imageview3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_above="@+id/text2"
                            android:src="@drawable/fastag_logo"
                            android:scaleType="centerInside"
                            android:layout_margin="@dimen/five"/>

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/textviewback_bg"
                            android:padding="@dimen/eight"
                            android:textColor="@color/white"
                            android:text="Activate Pending Fastag"
                            android:gravity="center"
                            android:textSize="@dimen/textsize"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_CompleteDuty"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"></Button>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/deshbord_bg">

                        <ImageView
                            android:id="@+id/imageview4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_above="@+id/text3"
                            android:src="@drawable/fastag_logo"
                            android:scaleType="centerInside"
                            android:layout_margin="@dimen/five"/>

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fastag Inventory"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:padding="@dimen/eight"
                            android:textSize="@dimen/textsize"
                            android:background="@drawable/textviewback_bg"
                            android:layout_alignParentBottom="true"/>

                        <Button
                            android:id="@+id/btn_FastagInventory"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"></Button>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hundred_eighty"
                android:layout_marginTop="@dimen/ten"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/deshbord_bg">

                        <ImageView
                            android:id="@+id/imageview5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_above="@+id/text4"
                            android:src="@drawable/call_report_icon"
                            android:scaleType="centerInside"
                            android:layout_margin="@dimen/five"/>

                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Report"
                            android:textAllCaps="true"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:padding="@dimen/eight"
                            android:textSize="@dimen/textsize"
                            android:textStyle="bold"
                            android:background="@drawable/textviewback_bg"
                            android:layout_alignParentBottom="true"/>

                        <Button
                            android:id="@+id/btn_Report"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"></Button>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    android:visibility="invisible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/deshbord_bg">

                        <ImageView
                            android:id="@+id/imageview6"
                            android:layout_width="@dimen/eighty"
                            android:layout_height="@dimen/sixty"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageview6"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:text="Fastag Inventory"
                            android:textAllCaps="true"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/textsize"
                            android:gravity="center"/>

                        <Button
                            android:id="@+id/btn_MyProfile1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"></Button>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>