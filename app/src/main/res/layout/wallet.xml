<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <!-- <include
        android:id="@+id/include"
        layout="@layout/tollbar">

    </include>-->

    <androidx.cardview.widget.CardView
        android:id="@+id/lin_ExistingCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginEnd="@dimen/ten"
        android:layout_marginBottom="@dimen/ten"
        app:cardCornerRadius="@dimen/five"
        app:cardElevation="@dimen/ten">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/five"
            android:layout_marginTop="@dimen/five"
            android:layout_marginEnd="@dimen/five"
            android:layout_marginBottom="@dimen/five"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="29-04-2022 / 10:19:34"
                android:textColor="@color/black"
                android:layout_margin="@dimen/five"
                android:textSize="@dimen/twelve">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="Transaction Id"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1651250974"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="Payment Type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="Credit"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rs. 100"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve">

                </TextView>


            </LinearLayout>

            <TextView
                android:id="@+id/btn_viewDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/eight"
                android:text="View Details"
                android:background="@color/blue"
                android:layout_gravity="right"
                android:layout_margin="@dimen/five"
                android:textColor="@color/white"
                android:textSize="@dimen/twelve"></TextView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>